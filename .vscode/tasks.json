  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "command": "make build",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "Test",
      "command": "make test",
      "type": "shell",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
